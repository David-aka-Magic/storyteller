{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-storywriter",
  "version": "0.1.0",
  "identifier": "com.dcarl.ai-storywriter",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ai-storywriter",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:*; connect-src 'self' http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
